<html>
    <head>
        <link rel="stylesheet" href="static/css/style.css">
    <meta charset="utf-8">
    <title>Edit House</title>
    </head>
    <body>
        <header>
            <h1>Hogwarts Houses</h1>
            <h2>Group 108</h2>
        </header>
        <main>
            <section>
                <form id="editHouse" action="/edit_houses/{{data[0].houseID}}" method="POST">
                    <legend>Edit Class</legend>
                    <fieldset>
                        <input type="hidden" value="{{data[0].houseID}}" class="form-control" id="houseID" name="houseID" required>

                        <label>House Name</label>
                        <input type="text" value="{{data[0].houseName}}" class="form-control" id="houseName" name="houseName" required>

                        <label>Dorm Location</label>
                        <input type="text" value="{{data[0].dormLocation}}" class="form-control" id="dormLocation" name="dormLocation" required>

                    </fieldset>
                    <input type="submit" value="Edit House" name="Edit_House" class="btn btn-primary">
                    <a href='/houses'><input class="btn" type="button" value="Cancel"></a>
                </form>
            </section>
        </main>
    </body>
</html>